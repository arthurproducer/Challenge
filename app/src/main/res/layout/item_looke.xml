<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView android:layout_width="60dp" android:layout_height="80dp"
               android:id="@+id/imgCover"
               android:layout_marginStart="8dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:scaleType="centerCrop"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            app:layout_constraintStart_toEndOf="@+id/imgCover"
            android:layout_marginStart="52dp" app:layout_constraintTop_toTopOf="@+id/imgCover"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imgMusic"
            app:layout_constraintTop_toTopOf="@+id/imgCover"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.517" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="LinkVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/txtVideo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgCover" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/txtName"/>

</androidx.constraintlayout.widget.ConstraintLayout>